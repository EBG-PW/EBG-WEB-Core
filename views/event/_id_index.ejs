      </div>
    </div>
    <!-- Libs JS -->
    <!-- Tabler Core -->
    <script src="<%= domain %>/appjs/permission.js?<%= curentUnixTime %>" defer></script>
    <script src="<%= domain %>/appjs/translate.js?<%= curentUnixTime %>"></script>
    <script src="<%= domain %>/dist/js/tabler.min.js?<%= curentUnixTime %>" defer></script>
    <script src="<%= domain %>/appjs/layout.js?<%= curentUnixTime %>"></script>
    <script>
      let last_event_data = {};
      // Auto-fill user data (VanillaJS)
      document.addEventListener("DOMContentLoaded", async () => {
        loadEventDetails();
      });

      const loadEventDetails = async () => {
        const response = await fetch(`/api/v1/event/<%= params.id %>`, {
          method: "GET",
          headers: {
            "Content-Type": "application/json",
            Authorization: "Bearer " + localStorage.getItem("token"),
          },
        });

        if (response.status == 200) {
          const event_data = await response.json();
          loadAnnouncements(event_data);
          last_event_data = event_data;

          document.getElementById("event_name").innerText = event_data.name;
          document.getElementById("event_description").innerHTML = event_data.description;
          document.getElementById("event_address").innerHTML = event_data.location_address;
          document.getElementById("date_start_header").innerText = new Date(event_data.date_start).toLocaleString("de-DE", { hour: "2-digit", minute: "2-digit", day: "2-digit", month: "2-digit", year: "numeric" });

          document.getElementById("date_apply").innerText = `${i18next.t("Events.Body.Card.JoinDate")} ${new Date(event_data.date_apply).toLocaleString("de-DE", { hour: "2-digit", minute: "2-digit", day: "2-digit", month: "2-digit", year: "numeric" })}`;
          document.getElementById("date_start").innerText = `${i18next.t("Events.Body.Card.StartDate")} ${new Date(event_data.date_start).toLocaleString("de-DE", { hour: "2-digit", minute: "2-digit", day: "2-digit", month: "2-digit", year: "numeric" })}`;
          document.getElementById("date_end").innerText = `${i18next.t("Events.Body.Card.EndDate")} ${new Date(event_data.date_end).toLocaleString("de-DE", { hour: "2-digit", minute: "2-digit", day: "2-digit", month: "2-digit", year: "numeric" })}`;
          document.getElementById("min_group").innerText = `${i18next.t("Events.Body.Card.MinGroup")} ${i18next.t(`User_Groups.virtualGroups.${event_data.min_group}`)}`;
          document.getElementById("participants").innerText = `${i18next.t("Events.Body.Card.ParticipantWithCount", { count: Number(event_data.participants) })}`; // Maybe add "participants_logged_in" there too
          document.getElementById("visibility").innerText = `${i18next.t("Events.Body.Card.Visibility")} ${i18next.t(`Events.Visibility.${event_data.visibility}`)}`;

          document.getElementById("event_button").innerHTML = event_data.user_participates
            ? `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-user-check">
                              <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                              <path d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"/>
                              <path d="M6 21v-2a4 4 0 0 1 4 -4h4"/>
                              <path d="M15 19l2 2l4 -4"/>
                            </svg>
                            <span>${i18next.t("Events.Body.Card.Participates")}</span>`
            : `<div class="btn btn-primary ${event_data.can_join ? "" : "disabled"}" style="cursor: pointer;" onclick="event.stopPropagation(); joinEvent(this.id); return false;" id="${event_data.puuid}">
                              <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M12 5v14M5 12h14" /></svg>
                              <div>${i18next.t("Events.Body.Card.JoinButton")}</div>
                              </div>`;

          if (event_data.creator_user_id === Number(localStorage.getItem("user_id"))) {
            document.getElementById("event_information_button").innerHTML = `<a href="/event/<%= params.id %>/settings" class="btn btn-primary btn-sm">
                            <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-settings"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M10.325 4.317c.426 -1.756 2.924 -1.756 3.35 0a1.724 1.724 0 0 0 2.573 1.066c1.543 -.94 3.31 .826 2.37 2.37a1.724 1.724 0 0 0 1.065 2.572c1.756 .426 1.756 2.924 0 3.35a1.724 1.724 0 0 0 -1.066 2.573c.94 1.543 -.826 3.31 -2.37 2.37a1.724 1.724 0 0 0 -2.572 1.065c-.426 1.756 -2.924 1.756 -3.35 0a1.724 1.724 0 0 0 -2.573 -1.066c-1.543 .94 -3.31 -.826 -2.37 -2.37a1.724 1.724 0 0 0 -1.065 -2.572c-1.756 -.426 -1.756 -2.924 0 -3.35a1.724 1.724 0 0 0 1.066 -2.573c-.94 -1.543 .826 -3.31 2.37 -2.37c1 .608 2.296 .07 2.572 -1.065z" /><path d="M9 12a3 3 0 1 0 6 0a3 3 0 0 0 -6 0" /></svg>
                            <span>${i18next.t("Events.Settings.Button.Link")}</span>
                          </a>`;
          } else if (event_data.user_participates) {
            document.getElementById("event_information_button").innerHTML = `<p class="btn btn-danger btn-sm">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-door-exit"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M13 12v.01" /><path d="M3 21h18" /><path d="M5 21v-16a2 2 0 0 1 2 -2h7.5m2.5 10.5v7.5" /><path d="M14 7h7m-3 -3l3 3l-3 3" /></svg>
                <span onclick="event.stopPropagation(); leaveEvent(this.id); return false;" id="${event_data.puuid}">${i18next.t("Events.Body.Card.LeaveButton")}</span>
                            `;
          } else {
            document.getElementById("event_information_button").innerHTML = "";
          }
        }
      };

      const loadAnnouncements = async (event_data = last_event_data) => {
        const response = await fetch(`/api/v1/event/<%= params.id %>/announce`, {
          method: "GET",
          headers: {
            "Content-Type": "application/json",
            Authorization: "Bearer " + localStorage.getItem("token"),
          },
        });

        if (response.status == 200) {
          const announcements = await response.json();

          document.getElementById("event_announcements").innerHTML = "";
          announcements.forEach((announcement) => {
            const announcement_content = JSON.parse(announcement.content)
            let text, icon;
            if (announcement_content.type === "text") {
              text = announcement_content.data;
              icon = `<svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-info-circle"><path stroke="none" d="M0 0h24v24H0z" fill="none" /><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M12 9h.01" /><path d="M11 12h1v4h1" /></svg>`;
            } else if (announcement_content.type === "image") {
              text = `<img src="${announcement_content.data}" alt="Announcement Image" style="max-width: 100%; max-height: 100%;">`;
              icon = `<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-photo-scan"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 8h.01" /><path d="M6 13l2.644 -2.644a1.21 1.21 0 0 1 1.712 0l3.644 3.644" /><path d="M13 13l1.644 -1.644a1.21 1.21 0 0 1 1.712 0l1.644 1.644" /><path d="M4 8v-2a2 2 0 0 1 2 -2h2" /><path d="M4 16v2a2 2 0 0 0 2 2h2" /><path d="M16 4h2a2 2 0 0 1 2 2v2" /><path d="M16 20h2a2 2 0 0 0 2 -2v-2" /></svg>`;
            } else if (announcement_content.type === "video") {
              text = `<video src="${announcement_content.data}" controls style="max-width: 100%; max-height: 100%;"></video>`;
              icon = `<svg  xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-video"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M15 10l4.553 -2.276a1 1 0 0 1 1.447 .894v6.764a1 1 0 0 1 -1.447 .894l-4.553 -2.276v-4z" /><path d="M3 6m0 2a2 2 0 0 1 2 -2h8a2 2 0 0 1 2 2v8a2 2 0 0 1 -2 2h-8a2 2 0 0 1 -2 -2z" /></svg>`;
            } else if (announcement_content.type === "Create") {
              return;
            }
            document.getElementById("event_announcements").innerHTML += `<li class="timeline-event">
              <div class="timeline-event-icon">
                ${icon}
              </div>
              <div class="card timeline-event-card">
                <div class="card-body">
                  <div class="text-secondary float-end">
                    ${new Date(announcement.time).toLocaleString("de-DE", { hour: "2-digit", minute: "2-digit", day: "2-digit", month: "2-digit", year: "numeric" })}
                  </div>
                  <p class="text-secondary">
                    <span>${text}</span>
                  </p>
                  ${event_data.creator_user_id === Number(localStorage.getItem("user_id")) ? `<span>
                    <button onclick="deleteAnnouncement(this.id)" id="card|${announcement.activity_id}|${announcement.time}" class="btn btn-danger float-end">
                      <svg xmlns="http://www.w3.org/2000/svg"  width="24"  height="24"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-trash-x"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 7h16" /><path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" /><path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" /><path d="M10 12l4 4m0 -4l-4 4" /></svg>
                      <div>${i18next.t("Events.Settings.Announce.Button.Delete")}</div>
                    </button>
                  </span>` : ""}
                </div>
              </div>
            </li>`;
          });
        }
      }

      const deleteAnnouncement = async (id) => {
        const activity_id = id.split("|")[1];
        const time = id.split("|")[2];
        const response = await fetch(`/api/v1/event/<%= params.id %>/announce/${activity_id}/${time}`, {
          method: "DELETE",
          headers: {
            "Content-Type": "application/json",
            Authorization: "Bearer " + localStorage.getItem("token"),
          },
        });

        if (response.status == 200) {
          loadAnnouncements();
        } else {
        }
      };

      const joinEvent = async (id) => {
        const response = await fetch(`/api/v1/event/${id}/join`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Authorization: "Bearer " + localStorage.getItem("token"),
          },
        });

        if (response.status == 200) {
          const event_data = await response.json();

          loadEventDetails();
        } else {
          // ToDo: Snackbar Error
        }
      };

      const leaveEvent = async (id) => {
        const response = await fetch(`/api/v1/event/${id}/leave`, {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
            Authorization: "Bearer " + localStorage.getItem("token"),
          },
        });

        if (response.status == 200) {
          const event_data = await response.json();

          loadEventDetails();
        } else {
          // ToDo: Snackbar Error
        }
      };
    </script>
  </body>
</html>
