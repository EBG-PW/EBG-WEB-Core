---
// TRANSLATION
const { translation = {}, lang = "en" } = Astro.props;
import { Icon } from "astro-icon/components";
import staticData from "../data/static.json";
---

<style lang="scss">
  .header {
    position: fixed;
    top: 0;

    z-index: 15;
    background-color: transparent;
    width: 100%;
    height: 80px;

    transition: 0.25s background-color;

    &.active {
      background-color: white;
      box-shadow: 0 0 5px rgba(25, 25, 25);

      .wrapper {
        a {
          p {
            color: rgba(25, 25, 25);
          }
        }
      }
    }

    .wrapper {
      width: 1200px;
      margin: 0 auto;
      height: 100%;
      overflow: hidden;

      display: flex;
      align-items: center;

      a {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 15px;
        height: 80px;

        font-family: "Inter Variable", sans-serif;
        text-decoration: none;

        img {
          width: 50px;
          height: 50px;
        }

        p {
          transition: 0.25s color;
          color: white;
          font-size: 1rem;
          line-height: 1.2rem;
        }

        svg {
          margin-left: 6px;
        }

        &:hover {
          background-color: rgba(0, 0, 0, 0.1);

          img {
            animation: wiggle 0.4s linear;
          }
        }
      }
    }
  }

  @keyframes wiggle {
    0% {
      rotate: 0deg;
    }
    25% {
      rotate: -5deg;
    }
    75% {
      rotate: 5deg;
    }
  }
</style>

<nav class="header" id="header">
  <div class="wrapper">
    <a href="/#">
      <img src="/logo.svg" alt={staticData.name + " Logo"} />
      <p>{staticData.name}</p>
    </a>

    <a
      href={staticData[lang === "en" ? "location_de" : "location_en"]}
      class="change-lang"
      style="margin-left:auto"
      ><!--
  -->
      <p>{staticData[lang === "en" ? "change_from_en" : "change_from_de"]}</p>
      <Icon name={lang === "en" ? "de" : "en"} /><!--
--></a
    >
    <a href="/login">
      <p><!--
        -->{translation.login}</p>
    </a>
  </div>
</nav>

<script>
  const header = document.getElementById("header");
  var shown = false;

  document.addEventListener("scroll", headerAnim);

  function headerAnim() {
    if (window.scrollY > 0 && !shown) {
      shown = true;
      header?.classList.add("active");
    } else if (window.scrollY <= 0 && shown) {
      shown = false;
      header?.classList.remove("active");
    }
  }
  headerAnim();
</script>
